---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Link from "../ui/link";

const menuItems = [
  { href: "#inicio", label: "Inicio" },
  { href: "#nosotros", label: "Nosotros" },
  { href: "#beneficios", label: "Beneficios" },
  { href: "#servicios", label: "Servicios" },
  { href: "#precios", label: "Precios" },
];
---

<header class="fixed z-50 top-0 right-0 left-0">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div
      class="rounded-xl border backdrop-blur supports-[backdrop-filter]:bg-white/5 border-black/10 bg-black/5"
    >
      <Astronav>
        <div class="flex items-center justify-between px-4 py-3">
          <!-- Brand -->
          <a href="#inicio" class="font-medium text-black font-nunito text-lg">
            Brandia
          </a>

          <!-- Desktop Navigation -->
          <nav class="hidden items-center gap-8 md:flex">
            {
              menuItems.map((item) => (
                <a
                  href={item.href}
                  class="text-sm font-medium transition text-black/80 hover:text-black font-nunito"
                >
                  {item.label}
                </a>
              ))
            }
          </nav>

          <!-- Desktop Actions -->
          <div class="hidden md:flex items-center gap-3">
            <Link href="/App" variant="secondary" size="sm"> App </Link>
          </div>

          <!-- Mobile Menu Icon -->
          <div class="md:hidden">
            <MenuIcon
              class="inline-flex h-10 w-10 items-center justify-center rounded-lg border transition border-black/10 bg-black/0 hover:bg-black/5"
            >
              <svg
                slot="open"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-5 w-5"
              >
                <path d="M4 5h16"></path>
                <path d="M4 12h16"></path>
                <path d="M4 19h16"></path>
              </svg>
              <svg
                slot="close"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-5 w-5"
              >
                <path d="M18 6L6 18"></path>
                <path d="M6 6l12 12"></path>
              </svg>
            </MenuIcon>
          </div>
        </div>

        <!-- Mobile Menu -->
        <MenuItems class="border-t px-4 py-3 md:hidden border-black/10">
          <nav class="grid gap-2">
            {
              menuItems.map((item) => (
                <a
                  href={item.href}
                  class="rounded-lg px-3 py-2 text-sm font-medium transition text-black/80 hover:bg-black/5 hover:text-black font-nunito"
                >
                  {item.label}
                </a>
              ))
            }

            <div class="mt-2 flex gap-2">
              <Link
                href="#contacto"
                variant="outline"
                size="sm"
                className="flex-1"
              >
                <svg
                  slot="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-4 w-4"
                >
                  <path
                    d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"
                  ></path>
                </svg>
                Contacto
              </Link>

              <Link href="#precios" size="sm" className="flex-1">
                <svg
                  slot="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-4 w-4"
                >
                  <path d="M8 2v4"></path>
                  <path d="M16 2v4"></path>
                  <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                  <path d="M3 10h18"></path>
                </svg>
                Ver Precios
              </Link>
            </div>
          </nav>
        </MenuItems>
      </Astronav>
    </div>
  </div>
</header>
