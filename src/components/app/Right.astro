<div class="w-full md:w-2/3 lg:w-3/4 p-6 md:p-10 lg:p-16 overflow-y-auto">
    <div class="max-w-2xl">
        <h2 class="text-2xl md:text-3xl font-light mb-2">Account Setup</h2>
        <p class="mb-8">Let's get to know you better</p>

        <form class="space-y-6">
            <!-- Personal Information -->
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm mb-1" for="first-name"
                            >First Name</label
                        >
                        <input
                            type="text"
                            id="first-name"
                            class="w-full border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-blue-400"
                        />
                    </div>
                    <div>
                        <label class="block text-sm mb-1" for="last-name"
                            >Last Name</label
                        >
                        <input
                            type="text"
                            id="last-name"
                            class="w-full border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-blue-400"
                        />
                    </div>
                </div>

                <div>
                    <label class="block text-sm mb-1" for="email"
                        >Work Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        class="w-full border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-blue-400"
                    />
                </div>

                <div>
                    <label class="block text-sm mb-1" for="password"
                        >Create Password</label
                    >
                    <input
                        type="password"
                        id="password"
                        class="w-full border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-blue-400"
                    />
                    <p class="mt-1 text-xs text-gray-500">
                        Must be at least 8 characters with 1 uppercase, 1 number
                        and 1 special character
                    </p>
                </div>
            </div>

            <!-- Company Information -->
            <div class="pt-4 border-t border-gray-800">
                <h3 class="text-lg font-light mb-4">Company Information</h3>

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm mb-1" for="company"
                            >Company Name</label
                        >
                        <input
                            type="text"
                            id="company"
                            class="w-full border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-blue-400"
                        />
                    </div>

                    <!-- Custom Industry Dropdown -->
                    <div>
                        <label class="block text-sm mb-1">Industry</label>
                        <div class="custom-dropdown" id="industry-dropdown">
                            <button
                                type="button"
                                class="w-full border border-gray-700 rounded-md px-4 py-2 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-blue-400"
                            >
                                <span class="dropdown-selected"
                                    >Select your industry</span
                                >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div
                                class="dropdown-options mt-1 bg-gray-900 border border-gray-700 rounded-md shadow-lg"
                            >
                                <div class="py-1">
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="tech"
                                    >
                                        Technology
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="finance"
                                    >
                                        Finance
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="healthcare"
                                    >
                                        Healthcare
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="education"
                                    >
                                        Education
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="manufacturing"
                                    >
                                        Manufacturing
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="retail"
                                    >
                                        Retail
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="other"
                                    >
                                        Other
                                    </div>
                                </div>
                            </div>
                            <input
                                type="hidden"
                                name="industry"
                                id="industry-input"
                            />
                        </div>
                    </div>

                    <!-- Custom Company Size Dropdown -->
                    <div>
                        <label class="block text-sm mb-1">Company Size</label>
                        <div class="custom-dropdown" id="size-dropdown">
                            <button
                                type="button"
                                class="w-full border border-gray-700 rounded-md px-4 py-2 text-left flex justify-between items-center focus:outline-none focus:ring-1 focus:ring-blue-400"
                            >
                                <span class="dropdown-selected"
                                    >Select company size</span
                                >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div
                                class="dropdown-options mt-1 bg-gray-900 border border-gray-700 rounded-md shadow-lg"
                            >
                                <div class="py-1">
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="1-10"
                                    >
                                        1-10 employees
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="11-50"
                                    >
                                        11-50 employees
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="51-200"
                                    >
                                        51-200 employees
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="201-500"
                                    >
                                        201-500 employees
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="501-1000"
                                    >
                                        501-1000 employees
                                    </div>
                                    <div
                                        class="px-4 py-2 hover:bg-gray-800 cursor-pointer"
                                        data-value="1000+"
                                    >
                                        1000+ employees
                                    </div>
                                </div>
                            </div>
                            <input
                                type="hidden"
                                name="company-size"
                                id="size-input"
                            />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Terms & Conditions -->
            <div class="pt-4 border-t border-gray-800">
                <label class="flex items-start">
                    <input
                        type="checkbox"
                        class="mt-1 border border-gray-700 rounded focus:ring-blue-400"
                    />
                    <span class="ml-2 text-sm">
                        I agree to the <a
                            href="#"
                            class="text-blue-400 hover:text-blue-300"
                            >Terms of Service</a
                        > and <a
                            href="#"
                            class="text-blue-400 hover:text-blue-300"
                            >Privacy Policy</a
                        >
                    </span>
                </label>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between pt-6">
                <button
                    type="button"
                    class="px-6 py-2 border border-gray-700 rounded-md hover:bg-white/5 transition-colors"
                >
                    Back
                </button>
                <button
                    type="submit"
                    class="px-6 py-2 bg-blue-500 rounded-md hover:bg-blue-400 transition-colors"
                >
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>
